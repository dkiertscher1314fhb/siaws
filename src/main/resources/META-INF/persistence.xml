<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
 http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">

    <persistence-unit name="wikipedics">
        <description>The wikipedics Database</description>
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>de.fhb.systemintegration.wikipedics.domain.UserSettings</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:wikipedics" />
            <property name="javax.persistence.jdbc.user" value="wikipedics"/>
            <property name="javax.persistence.jdbc.password" value="wikipedics"/>
            <property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
        </properties>
    </persistence-unit>

</persistence>